<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="es.guepardito.patumusic.view.IndexController"
            prefHeight="700" prefWidth="1000.0"
            stylesheets="@index-view.css">
    <left>
        <VBox>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="Canciones" style="-fx-font-size: 24px; -fx-padding: 10;"/>
            <ListView fx:id="songListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
            <HBox>
                <Button fx:id="addSong" text="Agregar Canciones" onAction="#handleAddSongs" style="-fx-padding: 10;"/>
                <Button fx:id="deleteSong" text="Eliminar Cancion" onAction="#handleRemoveSongs" style="-fx-padding: 10;"/>
                <Button fx:id="selectSong" text="Escoger Cancion" onAction="#handleSelectSongs" style="-fx-padding: 10;"/>
            </HBox>
        </VBox>
    </left>
    <center>
        <VBox styleClass="centerVB">
            <ImageView fx:id="coverArtImageView" fitHeight="200" fitWidth="200" preserveRatio="true"/>

            <HBox>
                <Label text="Título:"/>
                <Label fx:id="titleLabel" text="Desconocido" />
            </HBox>

            <HBox>
                <Label text="Artista:"/>
                <Label fx:id="artistLabel" text="Desconocido"/>
            </HBox>

            <HBox>
                <Label text="Álbum:"/>
                <Label fx:id="albumLabel" text="Desconocido"/>
            </HBox>

            <HBox>
                <Label text="Duración:"/>
                <Label fx:id="durationLabel"/>
            </HBox>

            <ProgressBar fx:id="progressBar" prefWidth="300"/>

            <Button text="▶" onAction="#playSong"/>
        </VBox >
    </center>
</BorderPane>
